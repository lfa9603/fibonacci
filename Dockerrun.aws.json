{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "lorenzofasano96/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "api",
            "image": "lorenzofasano96/multi-api",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "lorenzofasano96/multi-worker",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "lorenzofasano96/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": {
                "hostPort": 80,
                "containerPort": 80
            },
            "links": ["client", "api"]
        }
    ]
}